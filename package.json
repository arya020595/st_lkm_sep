{
  "name": "lkm-sep-v2",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "concurrently": "^6.1.0",
    "lerna": "^3.22.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "concurrently --names \"GRAPHQL,APP\" --prefix-colors \"blue,green\" \"yarn graphql:dev\" \"yarn app:dev\"",
    "graphql:dev": "lerna run --stream graphql:dev",
    "graphql": "lerna run --stream graphql",
    "app:dev": "lerna run --stream app:dev",
    "app": "lerna run --stream app",
    "docs:dev": "lerna run --stream docs:dev",
    "docs": "lerna run --stream docs",
    "websocket": "lerna run --stream websocket"
  }
}
