# ============================================
# LKM-SEP v2 — Environment Variables Template
# ============================================
# Copy this file to .env and fill in the values.
# Usage: cp .env.example .env
# ============================================

# --- Version ---
VERSION_PREFIX=

# --- App (Next.js Frontend) ---
APP_PORT=9100
STAGING_ENV=
CDN_PREFIX=

# --- GraphQL API ---
GRAPHQL_API_HOST=localhost
GRAPHQL_API_PORT=9101
GRAPHQL_API_BIND_IP=0.0.0.0

# --- MongoDB ---
MONGOD_HOST=localhost
MONGOD_PORT=27017
MONGOD_DB=lkm-sep-v2
MONGOD_USERNAME=
MONGOD_PASSWORD=
MONGOD_AUTH_SOURCE=
# MONGOD_URI_STRING=mongodb://localhost:27017/lkm-sep-v2

# --- Redis (optional — caching) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=
REDIS_DB=0
# REDIS_SENTINELS=
# REDIS_GROUP_NAME=

